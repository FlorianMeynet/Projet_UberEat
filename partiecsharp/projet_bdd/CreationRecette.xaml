<Window x:Class="projet_bdd.CreationRecette"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projet_bdd"
        mc:Ignorable="d"
        Title="CreationRecette" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Création d'une nouvelle recette :" FontSize="30" HorizontalAlignment="Center"></Label>
            <Grid Margin="20">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="50">
                    <Label Content="Nom de la recette :" Margin="10" HorizontalAlignment="Center" FontWeight="Bold"></Label>
                    <TextBox Name="nomrecette" Margin="10" > </TextBox>

                    <Label Content="Descriptif :" Margin="10" HorizontalAlignment="Center" FontWeight="Bold"></Label>
                    <TextBox Name="descriptif" Margin="10" ></TextBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="50">
                    <Label Content="Prix de la recette :" Margin="10" HorizontalAlignment="Center" FontStyle="Normal" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        
                    <TextBox x:Name="prix" Margin="10" Width="15" />
                        <Label Content="euros" Margin="10" Width="40" FontStyle="Italic"></Label>
                    </StackPanel>
                    <Label Content="Liste des ingredients, séparée par des ';' :" Margin="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBox x:Name="listingredient" Margin="10" />

                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Retour" Width="100" Click="Retour"></Button>
            <Button Content="Valider" Width="100" Click="Validation"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
