<Window x:Class="projet_bdd.Commande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projet_bdd"
        mc:Ignorable="d"
        Title="Commande" Height="300" Width="400">
    <Grid Background="#FFEEF9E8">
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                <Label Content="Pseudo :" HorizontalAlignment="Center"  FontWeight="Bold" />
                <TextBox Name="pseudo" Margin="10" Height="18" Background="#FFE0D8D8"  SelectionTextBrush="#FF1D1B1B" Width="80" BorderBrush="{x:Null}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="5">
                <Label Content="Credit :" HorizontalAlignment="Center"  FontWeight="Bold" />
                <TextBox Name="Credit" Margin="10" Background="#FFE0D8D8"  SelectionTextBrush="#FF1D1B1B" Width="60" BorderBrush="{x:Null}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="1" >
                <Label Content="Deconnexion :" HorizontalAlignment="center" FontWeight="Bold" />
                <Button Name="deco" HorizontalAlignment="Center"   Visibility="Visible"  Foreground="#FFEEF9E8" Click="deco_Click" Width="40" Background="{x:Null}" BorderBrush="{x:Null}">
                    <Image  Height="30"  Source="shutdown.png"/>
                </Button>
            </StackPanel>
        </StackPanel>
        
        <Button Content="Retour" Click="retour" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="78"  Background="#FF2EFF00" FontFamily="Segoe UI Black" FontSize="16" />



    </Grid>
</Window>
