<Window x:Class="projet_bdd.Commande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projet_bdd"
        mc:Ignorable="d"
        Title="Commande" Height="450" Width="800">
    <Grid Background="#FFEEF9E8">
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top"  Height="80" Width="350">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                <Label Content="Deconnexion :" HorizontalAlignment="center" FontWeight="Bold" />
                <Button Name="deco" HorizontalAlignment="Center"   Visibility="Collapsed"  Foreground="#FFEEF9E8" Click="deco_Click" Height="50" Width="50"/>
                <Image HorizontalAlignment="center" Height="44" VerticalAlignment="Center" Source="shutdown.png"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                <Label Content="Pseudo :" HorizontalAlignment="Center"  FontWeight="Bold" />
                <TextBox Name="pseudo" Margin="10" Height="18" Background="#FFE0D8D8"  SelectionTextBrush="#FF1D1B1B" Width="80" />
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="5">
                <Label Content="Credit :" HorizontalAlignment="Center"  FontWeight="Bold" />
                <TextBox Name="Credit" Margin="10" Background="#FFE0D8D8"  SelectionTextBrush="#FF1D1B1B" Width="60"/>
            </StackPanel>
        </Grid>
        
        <Button Content="Retour" Click="retour" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="78"  Background="#FF2EFF00" FontFamily="Segoe UI Black" FontSize="16" />



    </Grid>
</Window>
