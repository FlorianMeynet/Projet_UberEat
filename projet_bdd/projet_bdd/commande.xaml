<Window x:Class="projet_bdd.Commande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projet_bdd"
        mc:Ignorable="d"
        Title="Commande" Height="450" Width="800">
    <Grid Background="#FFEEF9E8">
        <Grid HorizontalAlignment="Left" Height="67" Margin="426,0,0,0" VerticalAlignment="Top" Width="344" Background="#FFEEF9E8">
            <Label Content="Deconnexion" HorizontalAlignment="Left" Height="24" Margin="260,-3,0,0" VerticalAlignment="Top" Width="84" FontWeight="Bold" Background="{x:Null}"/>
            <Button x:Name="deco" Content="" HorizontalAlignment="Left" Margin="280,21,0,0" VerticalAlignment="Top" Height="45" Width="50" Visibility="Visible" Background="{x:Null}" Foreground="#FFEEF9E8" BorderBrush="{x:Null}" Click="deco_Click"/>
            <Label Content="Pseudo :" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="63" FontWeight="Bold" Margin="89,0,0,0"/>
            <TextBox x:Name="Pseudo" Text="" TextWrapping="Wrap" Margin="91,24,192,18" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <TextBox x:Name="credit" Text="" TextWrapping="Wrap" Margin="179,26,116,18" Background="#FFEEF9E8" BorderBrush="{x:Null}"/>
            <Label Content="Credit :" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="63" FontWeight="Bold" Margin="172,0,0,0"/>
            <Image HorizontalAlignment="Left" Height="44" Margin="283,21,0,0" VerticalAlignment="Top" Width="88" Source="shutdown.png"/>
        </Grid>
        <Button Content="Retour" Click="retour" HorizontalAlignment="Left" Height="28" Margin="10,8,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.5,0.5" Background="#FF2EFF00" FontFamily="Segoe UI Black" FontSize="16" BorderBrush="{x:Null}" />



    </Grid>
</Window>
